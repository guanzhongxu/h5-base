{
  "name": "base",
  "private": true,
  "version": "1.0.0",
  "author": "管忠旭",
  "type": "module",
  "scripts": {
    "dev": "vite --host ",
    "build:test": "vue-tsc && vite build --mode test",
    "build:standard": "vue-tsc && vite build --mode standard",
    "build:production": "vue-tsc && vite build --mode production",
    "preview": "vite preview",
    "prepare": "husky install",
    "lint": "pnpm eslint --config ./.eslintrc.cjs ./src",
    "lint-clear": "pnpm lint --config ./.eslintrc.cjs --ext .vue,.ts --cache",
    "prettier": "prettier --write --loglevel silent ./src",
    "commit": "pnpm prettier && git status && git add -A && git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "dependencies": {
    "@vant/use": "^1.6.0",
    "axios": "^1.11.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "foreign-country-utils": "1.16.0",
    "js-base64": "^3.7.8",
    "js-cookie": "^3.0.5",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "nanoid": "^4.0.2",
    "opencc-js": "^1.0.5",
    "pinia": "^2.3.1",
    "reflect-metadata": "^0.1.14",
    "vant": "^4.9.21",
    "vconsole": "^3.15.1",
    "vue": "^3.5.19",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/eslint": "^8.56.12",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash": "^4.17.20",
    "@types/md5": "^2.3.5",
    "@types/node": "^18.19.123",
    "@types/opencc-js": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.33.0",
    "husky": "^8.0.3",
    "postcss-px-to-viewport": "^1.1.1",
    "prettier": "^2.8.8",
    "stylus": "^0.59.0",
    "terser": "^5.43.1",
    "typescript": "^5.9.2",
    "unplugin-auto-import": "^0.16.7",
    "unplugin-vue-components": "^0.22.12",
    "vite": "5.1.0-beta.2",
    "vite-plugin-eslint": "^1.8.1",
    "vue-tsc": "^1.8.27"
  }
}
